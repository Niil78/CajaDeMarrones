/*  | Version 0.01 | []
 Lampara interactiva: La lampara se enciende y se apaga intermitente cada 2000Milisegundos*/

 /*|Version 0.02 | > En proceso
  * Muestra un led que dice que esta funcionando cada 1000Milisegundos
  * Varios canales de luz
  * Contador de horas de luz
  * Contador de horas apagado
  * Contado de gasto de luz
  * Programacion de las horas de luz */
  
/*| Version 0.03 |
 * Host wifi
 * Led de proceso (se enciende al aceptar proceso)*/

  /*Declaracion pines */
int Luz= 5; // Canal para las luces blancos 
int Luz2= 6;  //Canal para las luces azules
int Epoder= 0; // Contador de V+ Gastados
byte parpadeo[] = {200,100,50}; //array parpadeo
int Led1= 13; // Led de funcionamiento
int Led2= 12; // led indicador
int Tiempo= 0; // Tiempo 
int Cuenta1= 0; // contador de V gastado
float Cuenta2= 0; // contador de horas ON
float Cuenta3= 0; // contador de horas OFF

/* Fin declaraciones pines */
/*Setup*/
void setup() {
  pinMode(Luz,OUTPUT);
  pinMode(Luz2,OUTPUT);
  pinMode(Led1,OUTPUT);
}
/* loop | Version 0.1 */
void loop() {
  for(int i=0; i<3; i++) // crea un bucle tipo for utilizando la variable i de 0 a 3
 analogWrite(Led1,parpadeo[i]); //Le da la propiedad al led1 de parpadear
 }
